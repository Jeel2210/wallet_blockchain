            $("#btn2").html(Number($("#btn2").text()) - 3);
            $("#btn3").html(Number($("#btn3").text()) - 3);

            ["btn1", "btn2", "btn3"].forEach(b => pagination(b))
            $("#btn2").attr("disabled", false)
            $("#btn2").removeClass('noHover')
            $("#btn3").attr("disabled", false)
